{
    "name": "fp/openid-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 OpenID security extension",
    "keywords": ["Security", "OpenId", "Authentication"],
    "homepage": "https://github.com/formapro/FpOpenIdBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Kotlyar Maksim",
            "email": "kotlyar.maksim@gmail.com"
        },
        {
            "name": "Community",
            "homepage": "https://github.com/formapro/FpOpenIdBundle/contributors"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "lightopenid/lightopenid": "dev-master",
        "symfony/symfony": "~2.7|3.*|4.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7"
    },
    "autoload": {
        "psr-0": { "Fp\\OpenIdBundle": "" }
    },
    "suggest": {
        "doctrine/orm": "If you want store identities to database",
        "doctrine/mongodb-odm": "If you want store identities to mongodb"
    },
    "target-dir": "Fp/OpenIdBundle",
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.7-dev"
        }
    }
}
